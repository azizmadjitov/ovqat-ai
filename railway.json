{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "buildCommand": "npm install",
    "dockerfile": "server/Dockerfile"
  },
  "deploy": {
    "startCommand": "node server/index.js",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindowSeconds": 60
  }
}
